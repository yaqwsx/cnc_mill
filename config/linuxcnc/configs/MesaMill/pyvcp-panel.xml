	<label><text>"Otáčky motoru"</text></label>
	<number>
		<halpin>"spindle.show"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f RPM"</format>
	</number>

	<label><text>"Skutečné otáčky motoru"</text></label>
	<number>
		<halpin>"motor.real-rpm"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f RPM"</format>
	</number>

	<label><text>"Skutečné otáčky vřetena"</text></label>
	<number>
		<halpin>"spindle.real-rpm"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f RPM"</format>
	</number>

	<led>
		<on_color>"green"</on_color>
		<off_color>"red"</off_color>
		<led_size>20</led_size>
		<halpin>"on_speed"</halpin>
	</led>

