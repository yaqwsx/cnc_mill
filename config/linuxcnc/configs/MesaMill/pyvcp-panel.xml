	<label><text>"P"</text></label>
	<scale>
	    <font>("Helvetica",16)</font>
	    <width>"25"</width>
	    <halpin>"spindle.p"</halpin>
	    <resolution>10</resolution>
	    <orient>HORIZONTAL</orient>
	    <initval>1900</initval>
	    <min_>0</min_>
	    <max_>5000</max_>
	</scale>

	<label><text>"I"</text></label>
	<scale>
	    <font>("Helvetica",16)</font>
	    <width>"25"</width>
	    <halpin>"spindle.i"</halpin>
	    <resolution>10</resolution>
	    <orient>HORIZONTAL</orient>
	    <initval>3500</initval>
	    <min_>0</min_>
	    <max_>5000</max_>
	</scale>

	<label><text>"D"</text></label>
	<scale>
	    <font>("Helvetica",16)</font>
	    <width>"25"</width>
	    <halpin>"spindle.d"</halpin>
	    <resolution>10</resolution>
	    <orient>HORIZONTAL</orient>
	    <initval>1500</initval>
	    <min_>0</min_>
	    <max_>5000</max_>
	</scale>

	<label><text>"Otáčky vřetena"</text></label>
	<number>
		<halpin>"spindle.show"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f RPM"</format>
	</number>

