<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
	<label><text>"Převod vřetene"</text></label>
	<radiobutton>
		<choices>["horni", "dolni"]</choices>
		<halpin>"spindle-ratio"</halpin>
		<initval>0</initval>
	</radiobutton>

	<label><text>"Teplota 1"</text></label>
	<number>
		<halpin>"temp.1"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f °C"</format>
	</number>

	<label><text>"Teplota 2"</text></label>
	<number>
		<halpin>"temp.2"</halpin>
		<font>("Helvetica", 24)</font>
		<format>"+4.2f °C"</format>
	</number>

